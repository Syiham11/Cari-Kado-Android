<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl_gift_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.view.MainActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_gift_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_gift_info"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AppTheme.Toolbar"
                app:popupTheme="@style/AppTheme.NoActionBar" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_56dp_default_margin"
                android:layout_marginStart="@dimen/activity_56dp_default_margin"
                android:layout_marginTop="@dimen/activity_16dp_default_margin"
                android:contentDescription="@string/gift_info"
                android:src="@drawable/ic_gift_info_header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tb_gift_info"
                android:layout_marginTop="@dimen/activity_96dp_default_margin"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_16dp_default_margin"
                android:paddingEnd="@dimen/activity_16dp_default_margin"
                android:paddingStart="@dimen/activity_16dp_default_margin"
                android:paddingTop="@dimen/activity_16dp_default_margin">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_4dp_default_margin"
                    android:layout_marginBottom="@dimen/activity_16dp_default_margin"
                    android:layout_marginEnd="@dimen/activity_8dp_default_margin"
                    android:layout_marginStart="@dimen/activity_8dp_default_margin"
                    android:background="@color/colorPrimaryDark" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_gift_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:scrollbars="none" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.SwipeRefreshLayout>