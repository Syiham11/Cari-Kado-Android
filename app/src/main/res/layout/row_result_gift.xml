<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_result_gift"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_8dp_default_margin"
    android:layout_marginEnd="@dimen/activity_16dp_default_margin"
    android:layout_marginStart="@dimen/activity_16dp_default_margin"
    android:layout_marginTop="@dimen/activity_8dp_default_margin"
    app:cardBackgroundColor="@color/gift_info_row_clicked"
    app:cardCornerRadius="@dimen/activity_8dp_default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_gift_row_height"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_result_gift"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:padding="@dimen/activity_16dp_default_margin"
            app:civ_border_width="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_16dp_default_margin">

            <TextView
                android:id="@+id/tv_result_gift_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_result_gift_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_8dp_default_margin"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rb_result_gift_rate"
                style="?attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_8dp_default_margin"
                android:numStars="5"
                android:stepSize="1"
                android:theme="@style/AppTheme.RatingBar" />

            <TextView
                android:id="@+id/tv_result_gift_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_8dp_default_margin"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>