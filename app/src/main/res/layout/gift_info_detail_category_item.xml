<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_gift_info_detail_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_8dp_default_margin"
    android:layout_marginStart="@dimen/activity_8dp_default_margin"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="@dimen/activity_8dp_default_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_16dp_default_margin">

        <TextView
            android:id="@+id/tv_gift_info_detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</android.support.v7.widget.CardView>