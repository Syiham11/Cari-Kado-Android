<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_24dp_default_margin"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_help_inactive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:contentDescription="@string/help" />

            <TextView
                android:id="@+id/tv_help_inactive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_24dp_default_margin"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_help_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/help" />

            <TextView
                android:id="@+id/tv_help_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_16dp_default_margin"
                android:gravity="center_horizontal"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_help_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_16dp_default_margin"
                android:gravity="center_horizontal"
                android:textAppearance="?android:textAppearanceMedium" />

            <Button
                android:id="@+id/btn_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_16dp_default_margin"
                android:background="@drawable/button_style"
                android:padding="@dimen/activity_16dp_default_margin"
                android:text="@string/contact"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>