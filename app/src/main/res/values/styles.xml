<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Spinner" parent="AppTheme">
        <item name="android:textColorSecondary">@color/spinner_color_clicked</item>
        <item name="android:background">@drawable/spinner_style</item>
    </style>

    <style name="AppTheme.RatingBar" parent="AppTheme">
        <item name="android:theme">@style/AppTheme.RatingBar.Theme</item>
    </style>

    <style name="AppTheme.RatingBar.Small" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:theme">@style/AppTheme.RatingBar.Theme.Small</item>
    </style>

    <style name="AppTheme.RatingBar.Theme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorYellow</item>
        <item name="colorControlActivated">@color/colorYellow</item>
        <item name="colorControlHighlight">@color/colorYellow</item>
        <item name="android:textColorSecondary">@color/colorYellow</item>
    </style>

    <style name="AppTheme.RatingBar.Theme.Small" parent="AppTheme">
        <item name="colorControlNormal">@color/colorYellow</item>
        <item name="android:textColor">@color/colorYellow</item>
    </style>

    <style name="AppTheme.BottomNavigation" parent="AppTheme">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:padding">@dimen/activity_4dp_default_margin</item>
        <item name="itemIconTint">@color/bnv_main_color</item>
        <item name="itemTextColor">@color/bnv_main_color</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme">
        <item name="android:background">@drawable/edittext_style</item>
    </style>

    <style name="AppTheme.EditText.Search" parent="AppTheme.EditText">
        <item name="android:drawableEnd">@drawable/ic_find_in_page</item>
        <item name="android:textColorSecondary">@color/edittext_color_clicked</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:background">@drawable/button_style</item>
    </style>

</resources>
